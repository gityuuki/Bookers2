
<!DOCTYPE html>

<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/374d174b51.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    <header>
      
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><span>Bookers</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="navbar-collapse collapse show" id="navbarNavDropdown" style="">
        <ul class="navbar-nav ml-auto">
          <li>
            <a class="nav-link text-light" href="/users/121864">
              <i class="fas fa-home" aria-hidden="true"></i> Home
</a>          </li>
          <li>
            <a class="nav-link text-light" href="/users">
              <i class="fas fa-users" aria-hidden="true"></i> Users
</a>          </li>
          <li>
            <a class="nav-link text-light" href="/books">
              <i class="fas fa-book-open" aria-hidden="true"></i> Books
</a>          </li>
          <li>
            <a class="nav-link text-light" rel="nofollow" data-method="delete" href="/users/sign_out">
              <i class="fas fa-sign-out-alt" aria-hidden="true"></i> Log out
</a>          </li>
        </ul>
      </div>
    </div>
  </nav>
      
    <% if user_signed_in? %>
      <li>
        <%= link_to "Home", root_path, class:"nav-link" %>
      </li>
       <li>
        <%= link_to "Users", users_path %>
      </li>
       <li>
        <%= link_to "Books", books_path %>
      </li>
       <li>
        <%= link_to "Log out", destroy_user_session_path, method: :delete %>
      </li>
    <% else %>
        <li>
        <%= link_to "Home", root_path %>
      </li>
       <li>
        <%= link_to "About", about_path %>
      </li>
      <li>
        <%= link_to "Sign up", new_user_registration_path %>
      </li>
      <li>
        <%= link_to "Log in", new_user_session_path %>
      </li>
    <% end %>
  </header>
    <main>
    <%= yield %>
    </main>
    <footer>
      CopyRight Infratop.inc
    </footer>

  </body>
</html>

