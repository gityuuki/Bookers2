<h1>User info</h1>

<%= image_tag @user.get_profile_image %>

<table>

  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>

  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>


</table>

<%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block edit_user_121728" do%>
 <i class="fa-solid fa-user-gear"></i>
<% end %>



<h2>New book</h2>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book', class: "btn btn-success"  %>
<% end %>

<H2>Book</H2>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
 <tbody>
    <tr>
      <td><%= link_to  user_path(@book.user) do %>
        <%= image_tag @book.user.get_profile_image %><br>
          <%= @book.user.name %>
          <% end %>
      </td>

      <td><%= link_to @book.title, book_path(@book.id) %></td>
      <td><%= @book.body %></td>
      <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
      <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-danger" %></td>
    </tr>

 </tbody>
 </table>
