<h1>User Info</h1>

<%= image_tag @user.get_profile_image %>

<h2>name</h2>

<%= @user.name %>

<h2>introduction</h2>

<%= @user.introduction %>

<h1>新規投稿</h1>

<%= form_with model:Book.new do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>
  
  <h4>本文</h4>
  <%= f.text_area :body %>
  
  <%= f.submit '投稿' %>
  
<% end %>