<div class="container">
  <div class="row">
   <div class="col-md-3">

<h2>User info</h2>

<%= image_tag @user.get_profile_image %>

<table>

  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>

  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>


</table><br>

 <%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block edit_user_121728" do%>
 <i class="fa-solid fa-user-gear"></i>
<% end %><br>
 <h2>New book</h2>

<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book', class: "btn btn-success"  %>
<% end %><br>

</div>



 <div class="col-md-8 offset-md-1">

<H2>Books</H2>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
 <tbody>
   <% @books.each do |book| %>
    <tr>

      <td><%= link_to user_path(book.user.id) do %>
          <%= image_tag book.user.get_profile_image %>
          <% end %>
      </td>

      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
   <% end %>
 </tbody>
 </table>
  </div>
 </div>
</div>