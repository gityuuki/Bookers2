<h1>User info</h1>

<%= image_tag @user.get_profile_image %>

<table>

  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>

  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>


</table>

<%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block edit_user_121728" do%>
 <i class="fa-solid fa-user-gear"></i>
<% end %>
<h2>New book</h2>

<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book'  %>
<% end %>

<h2>Book detail</h2>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
 <tbody>
   <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image %></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "edit_book" %></td>
      <td><%= link_to "show" %></td>
    </tr>
   <% end %>
 </tbody>
 </table>