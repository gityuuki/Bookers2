<div class="container">
  <div class="row">
   <div class="col-md-3"> 

<h1>User info</h1>

<%= image_tag @user.get_profile_image %>

<table>

  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>

  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>


</table>

<%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block edit_user_121728" do%>
 <i class="fa-solid fa-user-cog"></i>
<% end %>
<h2>New book</h2>

<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book', class: "btn btn-success"  %>
<% end %>

</div>

 <div class="col-md-8 offset-md-1"> 

<H2>Users</H2>

<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>
 <tbody>
   <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show",  user_path(user.id) %></td>
    </tr>
   <% end %>
 </tbody>
 </table>
  </div>
 </div>
</div>