<h1>User info</h1>



<table>

  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>

  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>


</table>

<%= link_to '', edit_user_path(current_user.id), class:"fa-solid fa-user-gear" %>

<h1>New book</h1>

<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<H1>Users</H1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>

    </tr>


<% end %>